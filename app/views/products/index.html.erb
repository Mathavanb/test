<p id="notice"><%= notice %></p>

<h1><%= @name %></h1><br>

<table style="border-spacing: 15px">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Category</th>
      <th>Tag</th>
      <th>Rating</th>
      <th colspan="3">Action</th>
    </tr>
  </thead>

  <tbody>
    <% @product.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.description %></td>
        <td><%= product.category.id %></td>
        <td>
          <% if Tag.any? %>
            <% product.tags.each do |tag| %>
              <%= tag.name %> ,
            <% end %>
          <% else %>
            No Tags Available!!
          <% end %>
        </td>
        <td>
          <% if product.ratings.any? %>
            <% product.ratings.group(:value).count.each do |i| %>
              <b><%= i[0] %></b> ‚≠ê given by <b><%= i[1] %></b> |
            <% end %>
          <% else %>
            No Rating Available!
          <% end %>
        </td>
        <td><%= link_to 'Show', category_product_path(product.category.id, product) %></td>
        <td><%= link_to 'Edit', edit_category_product_path(product.category.id, product) %></td>
        <td><%= button_to 'Destroy', category_product_path(product.category.id, product), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'Variants', product_variants_path(product) %></td>
      </tr>
    <% end %>
  </tbody>
</table><br>

<% if @name != "All Posts" %>
  <%= link_to 'New Product', new_category_product_path(@category) %> |
<% end %>
<%= link_to 'Back Category', categories_path %>